<mah:MetroWindow
     x:Class="EvadeWPF.HelpWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:local="clr-namespace:EvadeWPF"
     xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
     mc:Ignorable="d"
     WindowStartupLocation="CenterScreen" 
     ShowMaxRestoreButton="False" ShowMinButton="False"
     BorderThickness="1" 
     Background="DimGray"
     Title="Evade Help" 
     Height="400" Width="400" MinHeight="400" MaxHeight="400" MinWidth="400" MaxWidth="400">
    <Border Background="Bisque">
        <Grid>
            <ScrollViewer>
                <TextBox x:Name="HelpTextBox" TextWrapping="Wrap">
                </TextBox>
            </ScrollViewer>
        </Grid>
    </Border>
</mah:MetroWindow>